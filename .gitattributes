# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Shell scripts
*.sh text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
